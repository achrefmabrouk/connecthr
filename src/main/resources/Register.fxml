<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8"
            fx:controller="tn.esprit.controllers.RegisterController"
            prefWidth="1000" prefHeight="600"
            style="-fx-background-color: #ffffff;">

    <HBox prefWidth="1000" prefHeight="600" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">


        <StackPane prefWidth="500" style="-fx-background-color: #2c3e50;">
            <ImageView fitWidth="500" fitHeight="600" preserveRatio="false">
                <image>
                    <Image url="@images/logo.png" />
                </image>
            </ImageView>
        </StackPane>


        <VBox alignment="CENTER" spacing="10.0" prefWidth="500"
              style="-fx-background-color: linear-gradient(to bottom right, #2c3e50, #3498db);">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Créer un compte"
                   textFill="white"
                   style="-fx-font-size: 26px; -fx-font-weight: bold;" />

            <TextField fx:id="nomField" promptText="Nom" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="prenomField" promptText="Prénom" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="adresseField" promptText="Email" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <PasswordField fx:id="passwordField" promptText="Mot de passe" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />

            <TextField fx:id="departementField" promptText="Département" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="gradeField" promptText="Grade" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="telephoneField" promptText="Téléphone" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />

            <TextField fx:id="sexeField" promptText="Sexe" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="posteField" promptText="Poste" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="niveauField" promptText="Niveau" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="tarifField" promptText="Tarif journalier" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />
            <TextField fx:id="joursCongesField" promptText="Jours de congé restants" maxWidth="300" style="-fx-background-radius: 10; -fx-padding: 10;" />

            <Label fx:id="errorLabel"
                   textFill="red"
                   visible="false"
                   style="-fx-font-size: 13px;" />

            <Button text="S'inscrire"
                    onAction="#handleRegister"
                    prefWidth="160"
                    style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10;" />

            <Label fx:id="successLabel"
                   textFill="white"
                   style="-fx-font-size: 13px;" />

            <Hyperlink text="Déjà un compte ? Se connecter"
                       onAction="#handleLoginRedirect"
                       style="-fx-text-fill: white;" />
        </VBox>
    </HBox>
</AnchorPane>
