<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.input.MouseEvent?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="cardemp" alignment="CENTER_LEFT" spacing="15.0" prefHeight="200.0" prefWidth="500.0"
      style="
          -fx-background-color: #ffffff;
          -fx-background-radius: 12;
          -fx-border-radius: 12;
          -fx-border-color: #dcdcdc;
          -fx-border-width: 2;
          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.3, 0, 4);
          -fx-padding: 10;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.cardcontroller">
   <children>

      <!-- Image employé avec effet de reflet -->
      <ImageView fx:id="imgemp" fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true"
                 style="-fx-background-radius: 60.0; -fx-border-radius: 60.0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0.3, 0, 2);">
         <clip>
            <Circle centerX="60.0" centerY="60.0" radius="60.0" />
         </clip>
         <image>
            <Image url="@images/eya.jpg" />
         </image>
      </ImageView>

      <!-- Informations de l'employé -->
      <VBox alignment="TOP_LEFT" spacing="5.0">
         <children>

            <!-- Nom et prénom -->
            <Label fx:id="nomemp" text="Nom Prénom" style="-fx-font-family: 'Berlin Sans FB'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <!-- Grade et poste -->
            <Label fx:id="gradeemp" text="Grade - Poste" style="-fx-font-family: 'Berlin Sans FB'; -fx-font-size: 14px; -fx-text-fill: #34495e;" />

            <!-- Départements et niveau -->
            <Label fx:id="departementLabel" text="Département - Niveau" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" />

            <!-- Adresse -->
            <Label fx:id="adresseLabel" text="Adresse complète" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" />

            <!-- Téléphone -->
            <Label fx:id="telephoneLabel" text="Téléphone: 12345678" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" />

            <!-- Sexe -->
            <Label fx:id="sexeLabel" text="Sexe: F" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" />

            <!-- Tarif journalier -->
            <Label fx:id="tarifLabel" text="Tarif journalier: 120.0 DT" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" />

            <!-- Congés restants -->
            <Label fx:id="congesLabel" text="Jours de congé restants: 5" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" />

         </children>
      </VBox>


      <Region HBox.hgrow="ALWAYS" />


      <VBox alignment="BOTTOM_RIGHT" spacing="10.0" style="-fx-padding: 10;">
         <children>

            <!-- Bouton Modifier -->
            <Button fx:id="modifierButton" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 0; -fx-pref-width: 40px; -fx-pref-height: 40px;">
               <graphic>
                  <ImageView fx:id="modifierIcon" fitHeight="30.0" fitWidth="30.0" >
                     <image>
                        <Image url="@images/editer.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>

            <!-- Bouton Supprimer -->
            <Button fx:id="supprimerButton" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 0; -fx-pref-width: 40px; -fx-pref-height: 40px;">
               <graphic>
                  <ImageView fx:id="supprimerIcon" fitHeight="30.0" fitWidth="30.0" >
                     <image>
                        <Image url="@images/supprimer.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>

         </children>
      </VBox>

   </children>
</HBox>
