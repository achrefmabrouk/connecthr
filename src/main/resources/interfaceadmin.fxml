                                <Image url="@images/icons8-facture-d'achat-64.png" />
                            </image>
                        </ImageView>
                        <Button fx:id="invoiceBtn" mnemonicParsing="false" prefHeight="50.0" prefWidth="170.0" styleClass="sidebar-button" text="Factures" />
