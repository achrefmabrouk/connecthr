                                <Image url="@images/icons8-stock-50.png" />
                            </image>
                        </ImageView>
                        <Button fx:id="stockBtn" mnemonicParsing="false" onAction="#affichestock" prefHeight="50.0" prefWidth="170.0" styleClass="sidebar-button" text="Stock" />
