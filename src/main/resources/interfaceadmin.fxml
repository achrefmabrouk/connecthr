    <center>
        <VBox fx:id="mainContent" spacing="20.0" BorderPane.alignment="CENTER" style="-fx-padding: 15;">
            <children>
                <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
                    <content>
                        <FlowPane fx:id="cardlayouuts"
                                  hgap="15"
                                  vgap="15"
                                  prefWrapLength="530"
