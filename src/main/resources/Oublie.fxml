<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.Oubile" stylesheets="@css/styles.css">
    <VBox spacing="15.0" alignment="CENTER" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Titre -->
        <Label text="🔒 Réinitialiser le mot de passe" fx:id="titleLabel" styleClass="label-title"/>

        <!-- Champ de téléphone -->
        <TextField fx:id="phoneField" promptText="Numéro de téléphone" maxWidth="250" styleClass="text-field"/>

        <!-- Bouton envoyer code -->
        <Button text="📩 Envoyer le code" onAction="#requestReset" maxWidth="250" styleClass="button button-code"/>

        <!-- Champ de code -->
        <TextField fx:id="codeField" promptText="Code reçu par SMS" maxWidth="250" styleClass="text-field"/>

        <!-- Bouton vérifier code -->
        <Button text="✅ Vérifier le code" onAction="#verifyCode" maxWidth="250" styleClass="button"/>

        <!-- Champ pour le nouveau mot de passe -->
        <PasswordField fx:id="newPasswordField" promptText="Nouveau mot de passe" maxWidth="250" styleClass="password-field"/>

        <!-- Bouton mettre à jour mot de passe -->
        <Button text="🔁 Mettre à jour le mot de passe" onAction="#updatePassword" maxWidth="250" styleClass="button button-password"/>
    </VBox>
</AnchorPane>
