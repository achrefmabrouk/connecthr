<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="cardStock" alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="400.0" spacing="15.0" style="           -fx-background-color: #ffffff;           -fx-background-radius: 12;           -fx-border-radius: 12;           -fx-border-color: #dcdcdc;           -fx-border-width: 2;           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0.3, 0, 4);           -fx-padding: 10;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.StockController">
    <children>

        <!-- Informations du produit -->
        <VBox alignment="TOP_LEFT" spacing="5.0">
            <children>

                <!-- Nom du produit -->
                <Label fx:id="nomProduit" style="-fx-font-family: 'Berlin Sans FB'; -fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Nom du produit" />

                <!-- Catégorie -->
                <Label fx:id="categorieProduit" style="-fx-font-family: 'Berlin Sans FB'; -fx-font-size: 14px; -fx-text-fill: #34495e;" text="Catégorie" />

                <!-- Statut -->
                <Label fx:id="statutProduit" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" text="Statut" />

                <!-- Prix -->
                <Label fx:id="prixProduit" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" text="Prix: 0.0 DT" />

                <!-- Quantité -->
                <Label fx:id="quantiteProduit" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 13px; -fx-text-fill: #555;" text="Quantité: 0" />

            </children>
        </VBox>

        <!-- Zone pour pousser les boutons au coin inférieur droit -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Icônes Modifier et Supprimer en boutons -->
        <VBox alignment="BOTTOM_RIGHT" spacing="10.0" style="-fx-padding: 10;">
            <children>

                <!-- Bouton Modifier -->
                <Button fx:id="modifierButton" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 0; -fx-pref-width: 40px; -fx-pref-height: 40px;">
                    <graphic>
                        <ImageView fx:id="modifierIcon" fitHeight="30.0" fitWidth="30.0">
                            <image>
                                <Image url="@images/editer.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Bouton Supprimer -->
                <Button fx:id="supprimerButton" style="-fx-background-color: transparent; -fx-border-width: 0; -fx-padding: 0; -fx-pref-width: 40px; -fx-pref-height: 40px;">
                    <graphic>
                        <ImageView fx:id="supprimerIcon" fitHeight="30.0" fitWidth="30.0">
                            <image>
                                <Image url="@images/supprimer.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </children>
        </VBox>

    </children>
</HBox>
