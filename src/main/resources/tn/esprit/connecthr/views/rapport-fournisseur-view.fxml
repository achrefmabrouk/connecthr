<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="708.0" prefWidth="804.0" style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.connecthr.controllers.RapportFournisseurController">
   <children>
      <VBox layoutX="14.0" layoutY="14.0" prefHeight="680.0" prefWidth="776.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Rapport de Performance des Fournisseurs">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <ComboBox fx:id="comboFournisseur" prefHeight="40.0" prefWidth="200.0" promptText="Sélectionner un fournisseur">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </ComboBox>
                        <Button fx:id="btnGenererRapport" mnemonicParsing="false" prefHeight="40.0" styleClass="btn-primary" text="Générer Rapport">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <ScrollPane fitToWidth="true" prefHeight="610.0" prefWidth="776.0" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="contentVBox" spacing="20.0">
                     <children>
                        <!-- Scores et statistiques de performance -->
                        <GridPane fx:id="gridScores" hgap="20.0" vgap="15.0">
                           <columnConstraints>
                              <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0" />
                              <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0" />
                              <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                              <javafx.scene.layout.RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                           </rowConstraints>
                           <children>
                              <!-- Score Global -->
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                                 <children>
                                    <Label text="Score Global" textFill="#9e9e9e">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblScoreGlobal" text="0" textFill="#4caf50">
                                       <font>
                                          <Font name="System Bold" size="36.0" />
                                       </font>
                                    </Label>
                                    <Label text="sur 100" textFill="#9e9e9e" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                              
                              <!-- Livraisons à temps -->
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" GridPane.columnIndex="1">
                                 <children>
                                    <Label text="Livraisons à Temps" textFill="#9e9e9e">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblLivraisonsATemps" text="0%" textFill="#4caf50">
                                       <font>
                                          <Font name="System Bold" size="36.0" />
                                       </font>
                                    </Label>
                                    <Label text="des commandes" textFill="#9e9e9e" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                              
                              <!-- Délai moyen de livraison -->
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" GridPane.columnIndex="2">
                                 <children>
                                    <Label text="Délai de Livraison" textFill="#9e9e9e">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblDelaiLivraison" text="0" textFill="#2196f3">
                                       <font>
                                          <Font name="System Bold" size="36.0" />
                                       </font>
                                    </Label>
                                    <Label text="jours en moyenne" textFill="#9e9e9e" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                              
                              <!-- Commandes totales -->
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" GridPane.rowIndex="1">
                                 <children>
                                    <Label text="Commandes Totales" textFill="#9e9e9e">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblCommandesTotales" text="0" textFill="#673ab7">
                                       <font>
                                          <Font name="System Bold" size="36.0" />
                                       </font>
                                    </Label>
                                    <Label text="commandes" textFill="#9e9e9e" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                              
                              <!-- Montant total -->
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <children>
                                    <Label text="Montant Total" textFill="#9e9e9e">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblMontantTotal" text="0" textFill="#ff5722">
                                       <font>
                                          <Font name="System Bold" size="36.0" />
                                       </font>
                                    </Label>
                                    <Label text="TND" textFill="#9e9e9e" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                              
                              <!-- Commande moyenne -->
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                 <children>
                                    <Label text="Montant Moyen" textFill="#9e9e9e">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="lblMontantMoyen" text="0" textFill="#ff9800">
                                       <font>
                                          <Font name="System Bold" size="36.0" />
                                       </font>
                                    </Label>
                                    <Label text="TND par commande" textFill="#9e9e9e" />
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </GridPane>
                        
                        <!-- Répartition des commandes par statut -->
                        <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                           <children>
                              <Label text="Répartition des Commandes par Statut" textFill="#404040">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Separator />
                              <StackPane fx:id="chartStatuts" minHeight="250.0" />
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </VBox>
                        
                        <!-- Tendance des commandes -->
                        <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                           <children>
                              <Label text="Tendance des Commandes" textFill="#404040">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Separator />
                              <StackPane fx:id="chartTendance" minHeight="250.0" />
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </VBox>
                        
                        <!-- Liste des dernières commandes -->
                        <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                           <children>
                              <Label text="Dernières Commandes" textFill="#404040">
                                 <font>
                                    <Font name="System Bold" size="14.0" />
                                 </font>
                              </Label>
                              <Separator />
                              <TableView fx:id="tableCommandes" prefHeight="200.0">
                                 <columns>
                                    <TableColumn fx:id="colNumero" prefWidth="120.0" style="-fx-alignment: CENTER-LEFT;" text="N° Commande" />
                                    <TableColumn fx:id="colDate" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Date" />
                                    <TableColumn fx:id="colMontant" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT;" text="Montant" />
                                    <TableColumn fx:id="colStatut" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Statut" />
                                    <TableColumn fx:id="colLivraison" prefWidth="120.0" style="-fx-alignment: CENTER;" text="Livraison" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                           <padding>
                              <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                           </padding>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>